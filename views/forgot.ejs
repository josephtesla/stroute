<body>
  <header class="header">
    <nav class="navbar fixed-top navbar-expand-lg navbar-light  scrolling-navbar">
      <div class="container">
        <a class="navbar-brand waves-effect" href="/">
          <strong>Twoxpress</strong>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <!--<span class="navbar-toggler-icon"></span>-->
          <i class="fa fa-navicon fa-lg"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">

          </ul>
          <ul class="navbar-nav nav-flex-icons">
            <li class="nav-item">
              <a href="https://github.com/JosephTesla" class="btn btn-outline-white waves-effect waves-light"">
								<i class="
                fa fa-github"></i>follow
              </a>
            </li>
            <li class="nav-item">
              <a href="/users/register" class="btn btn-outline-white waves-effect waves-light"">
								<i class=" fa
                fa-user"></i>
                <span id="userone">
                  Signup</span>
              </a>
            </li>
            <li></li>
            <li id="usertwo" class="nav-item">
              <a href="/users/login" class="btn btn-outline-white waves-effect waves-light"">
								<i class=" fa
                fa-key"></i> Login
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>



  <div class="container">

    <div class="content-app">
      <div class="userpart">

        <center>
          <form id="formLogin" action="/users/resetpassword" method='POST' class="col-md-6	text-center border border-light p-5">
            <%- messages();  %>
            <% if (locals.errormsg) { %>
              <div class="alert alert-danger">
                <%= errormsg %>
              </div>
              <% }  %>
            <div id="errorplace" class="alert alert-danger"></div>
            <h6 class="h4 mb-4">Reset your password...</h6>
            <input type="text" value="<%= (!!locals.username)?username:'' %>" name="username" class="form-control mb-4"
              placeholder="enter username" required>
            <input type="email" value="<%= (!!locals.email)?email:'' %>" name="email" class="form-control mb-4"
              placeholder="enter email address" required>
            <input type="password" value="<%= (!!locals.password)?password:'' %>" name="password" class="form-control mb-4"
              placeholder="new password"  required>
              <input type="password" value="<%= (!!locals.cpassword)?cpassword:'' %>" name="cpassword" class="form-control mb-4"
              placeholder="confirm new password">
            <button id="loginBtn" class="btn btn-info btn-block my-4" type="submit">reset</button>

          </form>

        </center>
      </div>

    </div>

    <footer>
      &copy Twoxpress
    </footer>
  </div>


